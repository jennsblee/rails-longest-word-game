<h1>New Game</h1>

<div class="d-flex">
  <% @letters.each do |letter| %>
    <div class="border rounded border-primary background-blue px-1 mx-3"><%= letter %></div>
  <% end %>
</div>

<form class="form-group my-3" action="/score" method="post">
  <label for ="input">What is the longest word you can find?</label>
  <div class="form-inline">
    <input type="text" class="form-control" name="word">
    <button type="submit" class="btn btn-outline-secondary">Play</button>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
